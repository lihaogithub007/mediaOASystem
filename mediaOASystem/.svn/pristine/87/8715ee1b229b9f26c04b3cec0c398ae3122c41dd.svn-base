<script type="text/javascript">
jQuery(document).ready(function(){
	jQuery(".fancybox-button-view").fancybox({
        groupAttr: 'data-rel',
        prevEffect: 'none',
        nextEffect: 'none',
        closeBtn: true,
        live : false,
        helpers: {
            title: {
                type: 'inside'
            }
        }
    });
});
var uploader = $("#photoForm");
$(function () {
    "use strict";
    #if("bluetwoinchphoto"=="$!{photo_column}" || "whitetwoinchphoto"=="$!{photo_column}") 
	    uploader.fileupload({
	        "url": "$!webPath/admin/user/userFileUpload.htm",
	        "method": "post",
	        "autoUpload": false,
	        "limitMultiFileUploads": 2, 
	        "limitConcurrentUploads": 1, 
	        "acceptFileTypes": /(\.|\/)(jpe?g)$/i,
	        "minFileSize": 200*1024,
	        "maxFileSize": 400*1024,
	        "maxNumberOfFiles": 10,
	        messages: {
	            maxNumberOfFiles: '文件个数不能超过10个',
	            minFileSize: '文件过小, 最小不能低于200kb',
	            maxFileSize: '文件过大, 最大不能超过400kb',
	        },
	        "previewMaxWidth": 50,
	        "previewMaxHeight": 50,
	    });
    #else
    	uploader.fileupload({
            "url": "$!webPath/admin/user/userFileUpload.htm",
            "method": "post",
            "autoUpload": false,
            "limitMultiFileUploads": 2, 
            "limitConcurrentUploads": 1, 
            "acceptFileTypes": /(\.|\/)(gif|jpe?g|png)$/i,
            "maxFileSize": 20*1024*1024,
            "maxNumberOfFiles": 10,
            messages: {
                maxNumberOfFiles: '文件个数不能超过10个',
                maxFileSize: '文件过大, 最大不能超过20M',
            },
            "previewMaxWidth": 50,
            "previewMaxHeight": 50,
        });	
    #end
});
function setAttachmentsIds(){
	var attach_nodes = jQuery("input[name='attachments_id']");
	var size = attach_nodes.length;
	if(0==size){
		jQuery("#attachments_ids").val("");
	}else{
		var arr = [];
		for(var i=0; i<size; i++){
			var attachments_id = jQuery(attach_nodes[i]).val();
			if(isEmpty(attachments_id) || contains(arr, attachments_id)){
				continue;
			}else{
				arr.push(attachments_id);
			}
		}
    	jQuery("#attachments_ids").val(arr.join(","));
	}
}
</script>