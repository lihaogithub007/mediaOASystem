<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel1">用户列表</h3>
</div>
<div class="modal-body">
    <div class="row-fluid">
        <form name="listForm" id="listForm" action="$!webPath/admin/user/ajax_user_list.htm" method="post">
               <div class="span12">
                   <div class="widget">
                       <div class="widget-title">
                           <h4><i class="icon-reorder"></i>用户列表</h4>
                       </div>
                       <div class="widget-body">
                           <table class="table table-bordered table-striped" id="dataTable">
                               <thead>
                                <tr>
                                    <th style="width:5%; min-width:30px;">
                                    	<input type="checkbox" class="group-checkable" data-set="#dataTable .checkboxes" />
                                    </th>
                                    <th style="width:15%; min-width:100px;">姓名</th>
                                    <th style="width:15%; min-width:100px;">部门/科组</th>
                                    <th style="width:15%; min-width:100px;">岗位</th>
                                    <th style="width:15%; min-width:100px;">工作证号</th>
                                    <th style="width:15%; min-width:100px;">员工关系</th>
                                    <th style="width:10%;">座机</th>
                                    <th style="width:10%;">手机号</th>
                                </tr>
                               </thead>
                               <tbody>
                                #foreach($obj in $!users)
                                <tr>
                                    <td>
                                    	<input type="checkbox" class="checkboxes" name="user_ck" value="$!obj.id" 
                                    		#foreach($u in $!list) #if(${obj.id}==${u.id}) checked="checked" #end #end/>
                                    </td>
                                    <td>$!CommUtil.substring($!{obj.true_name}, 15)</td>
                                    <td>$!CommUtil.substring($!{obj.department.department_name}, 10)</td>
                                    <td>$!CommUtil.substring($!{obj.duty.duty_name}, 10)</td>
                                    <td>$!CommUtil.substring($!{obj.card_number}, 15)</td>
                                    <td>$!user_relationship_map.get("$!{obj.user_relationship}")</td>
                                    <td>$!{obj.tel_number}</td>
                                    <td>$!{obj.mobile}</td>
                                </tr>
                                #end
                               </tbody>
                           </table>
                        </div>
                       </div>
                   </div>
               </div>
        </form>
    </div>
</div>
<div class="modal-footer">
    <input type="button" id="btn_confirm" class="btn btn-primary" value="确定"/>
    <input type="button" id="btn_cancel" class="btn" data-dismiss="modal" aria-hidden="true" value="关闭"/>
</div>
